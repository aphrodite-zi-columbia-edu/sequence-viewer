<div class="container">
  <h1>Settings</h1>
  <script>
      // $('#success-disappear').fadeOut();
    // setTimeout(function() {
    //   $('#success-disappear').fadeOut();

    //   setTimeout(function() {
    //     $('#success-disappear').remove();
    //   }, 1000);

    // }, 1000);
  </script>

  <div id="success-disappear" class="alert alert-success alert-dismissable fade start-faded-out">
    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    <strong>Validation Success!</strong> Valid Configuration
  </div>


  <div class="row">
    <div class="col-md-9">
      <div class="margins">
        <form class="form-horizontal" id="settings-form">
          <div class="form-group">
            <label for="reset-password" class="col-sm-2 control-label">Reset Password</label>
            <div class="col-sm-10">
              <input type="password" class="form-control" id="reset-password" name="resetpassword" disabled="true"  placeholder="(feature coming soon)">
            </div>
          </div>
          <h3>Data Configuration</h3>
          <ul class="nav nav-tabs" id="data-conf-tab-list" data-tabs="tabs">
            <li id="folder-nav-tab" class="active">
              <a data-toggle="tab" href="#folder-group">Folder</a>
            </li>
            <li id="url-nav-tab">
              <a data-toggle="tab" href="#url-group">Url (hosting)</a>
            </li>
          </ul>
          <div class="tab-content padding">
            <div class="tab-pane fade in active" id="folder-group">
              <div class="form-group">
                <label for="bw-dir" class="col-sm-2 control-label">BigWig Folder</label>
                <div class="col-sm-10">
                {{#if previous.bwdir}}
                  <input type="text" class="form-control" id="bw-dir" name="bwdir" value="{{previous.bwdir}}">
                {{else}}
                  <input type="text" class="form-control" id="bw-dir" name="bwdir" placeholder="/media/storageA/mm10-data/bigwig">
                {{/if}}
                </div>
              </div>
            </div>
            <div class="tab-pane fade" id="url-group">
              <div class="form-group">
                <label for="bw-dir" class="col-sm-2 control-label">BigWig Hosted Url</label>
                <div class="col-sm-10">
                {{#if previous.bwurl}}
                  <input type="text" class="form-control" id="bw-url" name="bwurl" value="{{previous.bwurl}}">
                {{else}}
                  <input type="text" class="form-control" id="bw-url" name="bwurl" placeholder="https://aphrodite.zi.columbia.edu:3005/">
                {{/if}}
                </div>
              </div>
            </div>
          </div>
          <h3>Sequences Configuration</h3>
          <ul class="nav nav-tabs">
            <li id="csv-nav-tab" class="active">
              <a data-toggle="tab" href="#csv-group">CSV</a>
            </li>
            <li id="mysql-nav-tab">
              <a data-toggle="tab" href="#mysql-group">MySQL</a>
            </li>
            <!-- <li><a data-toggle="tab" href="#menu2">Menu 2</a></li>
            <li><a data-toggle="tab" href="#menu3">Menu 3</a></li> -->
          </ul>
          <div class="tab-content padding">
            <div class="tab-pane fade in active" id="csv-group">
              <div class="form-group">
                <label for="csv-path" class="col-sm-2 control-label">CSV Path</label>
                <div class="col-sm-10">
                  <input type="text"
                         class="form-control"
                         id="csv-path"
                         name="csvpath"
                         {{#if previous.csvpath}}
                         value="{{previous.csvpath}}"
                         {{/if}}
                         placeholder="/path/to/file or ./filename">
                </div>
              </div>
              <div class="form-group">
                <label for="csv-path" class="col-sm-2 control-label">CSV Column</label>
                <div class="col-sm-10">
                  <input type="text"
                         class="form-control"
                         id="csv-path"
                         name="csvcolumn"
                         {{#if previous.csvcolumn}}
                         value="{{previous.csvcolumn}}"
                         {{/if}}
                         placeholder="1 or 2 or files or bwfiles">
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                  <div class="checkbox">
                    <label>
                      <input name="csvuseindex" type="checkbox" {{#if previous.csvuseindex}}value="on" {{/if}}/>
                      CSV has headers (else use col. number)
                    </label>
                  </div>
                </div>
              </div>
            </div>
            <div class="tab-pane fade" id="mysql-group">
              <div class="form-group">
                <label for="mysql-dbname"
                       class="col-sm-2 control-label">Database Name</label>
                <div class="col-sm-10">
                  <input type="text"
                         class="form-control"
                         id="mysql-dbname"
                         name="dbname"
                         {{#if previous.dbname}}
                         value="{{previous.dbname}}" 
                         {{/if}}
                         placeholder="sequences_db">
                </div>
              </div>
              <div class="form-group">
                <label for="mysql-dbuser"
                       class="col-sm-2 control-label">Database Username</label>
                <div class="col-sm-10">
                  <input type="text"
                         class="form-control"
                         id="mysql-dbuser"
                         name="dbuser"
                         {{#if previous.dbuser}}
                         value="{{previous.dbuser}}" 
                         {{/if}}
                         placeholder="user">
                </div>
              </div>
              <div class="form-group">
                <label for="mysql-dbuser"
                       class="col-sm-2 control-label">Database Password</label>
                <div class="col-sm-10">
                  <input type="password"
                         class="form-control"
                         id="mysql-dbuser"
                         name="dbpass"
                         {{#if previous.dbpass}}
                         value="{{previous.dbpass}}" 
                         {{/if}}
                         placeholder="pwd">
                </div>
              </div>
              <div class="form-group">
                <label for="mysql-dbhost"
                       class="col-sm-2 control-label">Database Host</label>
                <div class="col-sm-10">
                  <input type="text"
                         class="form-control"
                         id="mysql-dbhost"
                         name="dbhost"
                         {{#if previous.dbhost}}
                         value="{{previous.dbhost}}"
                         {{else}}
                         value="127.0.0.1"
                         {{/if}}
                         placeholder="127.0.0.1"
                         >
                </div>
              </div>
            </div>
          </div>
          {{!-- hide unimplemented stuff --}}
          {{#if false}}
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <div class="checkbox">
                <label>
                  <input name="optionbackup" type="checkbox"
                  {{#if previous.nooptionbackup}}
                  {{else}}
                  value="on"
                  {{/if}}
                  >
                  Back up old settings
                </label>
              </div>
            </div>
          </div>
          {{/if}}
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button type="submit" class="btn btn-default">Preview Configuration</button>
            </div>
          </div>
        </form>
      </div>
    </div>
    <div class="col-md-3">
      <div class="panel panel-default">
        <div class="panel-body">
          <textarea class="form-control" id="configuration-preview" rows="20"></textarea>
          <p></p>
          <button id="save" class="btn btn-default">Save</button>
        </div>
      </div>
      <div class="margins">
      </div>
    </div>
  </div>
</div>
